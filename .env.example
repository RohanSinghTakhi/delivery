# Backend Environment Variables
# Copy this file to backend/.env and frontend/.env with your values

# ===== BACKEND (.env) =====

# MongoDB Configuration
MONGO_URL="mongodb://localhost:27017"
DB_NAME="medex_delivery"

# CORS Configuration
CORS_ORIGINS="*"

# JWT Configuration
JWT_SECRET_KEY="your-super-secret-jwt-key-change-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Google Maps API (Get your key from: https://console.cloud.google.com/)
GOOGLE_MAPS_API_KEY="YOUR_GOOGLE_MAPS_API_KEY_HERE"

# Redis (Optional - for WebSocket scaling)
# REDIS_URL="redis://localhost:6379/0"

# File Upload Configuration
UPLOAD_DIR="/app/backend/uploads"
MAX_UPLOAD_SIZE_MB=10

# ===== FRONTEND (.env) =====

# Backend API URL
REACT_APP_BACKEND_URL=https://your-backend-url.com

# Google Maps API Key (same as backend)
REACT_APP_GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY_HERE

# Development settings (do not change)
WDS_SOCKET_PORT=443
REACT_APP_ENABLE_VISUAL_EDITS=false
ENABLE_HEALTH_CHECK=false